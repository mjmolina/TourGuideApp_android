<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_listview"
        android:padding="@dimen/View_padding">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ImageView_height"
            android:layout_margin="@dimen/ImageView_margin"
            android:scaleType="centerCrop"
            tools:src="@drawable/ubahn" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo"
            android:layout_marginLeft="@dimen/TextView_margin"
            android:layout_marginStart="@dimen/TextView_margin"
            android:layout_gravity="center"
            android:textSize="@dimen/textView_20sp"
            android:textStyle="bold"/>

    </RelativeLayout>

